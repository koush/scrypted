    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scrypted Debugger",
            "address": "${config:scrypted.debugHost}",
            "port": 10081,
            "request": "attach",
            "skipFiles": [
                "**/plugin-remote-worker.*",
                "<node_internals>/**"
            ],
            "preLaunchTask": "scrypted: deploy+debug",
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}/out",
            "remoteRoot": "/plugin/",
            "type": "pwa-node"
        }
    ]
}